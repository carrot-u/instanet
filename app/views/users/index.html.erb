<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <div class="col align-self-center">
    <div class="card border-dark mb-3 mx-auto">
      <div class="card-header text-center">
        <div class="row justify-content-end">
          <div class="col-4">
            <% if @team.parent_team_id.nil? %>
            <%= link_to teams_path, :class => "float-left btn btn-outline-primary" do %>
            Back to Teams
            <% end %>
            <% else %>
            <% @parent_team = Team.find(@team.parent_team_id) %>
            <%= link_to team_path(@parent_team), :class => "float-left btn btn-outline-secondary" do %>
            Back to <%= @parent_team.name %>
            <% end %>
            <% end %>
          </div>
          <div class="col-4">
            <h2><%= @team.name %></h2>
          </div>
          <div class="col-4">
            <%= link_to edit_team_path(@team), :class => "float-right btn btn-outline-secondary" do %>
            Edit <%= @team.name %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 text-center">
            <strong class="font-weight-bold font-italic">
              <%= @team.description %>
            </strong>
        </div>
        </div>
      </div>
      <%= link_to new_team_user_path, :class => "mt-3 mx-auto btn btn-primary" do %>
      New <%= @team.name %> Member
      <% end %>
      <div class="card-body text-center">
        <div class="card border-dark mb-3 mx-auto">
          <div class="card-header text-center">
            <h2>Managers</h2>
          </div>
          <div class="card-body">
            <div class="container-fluid">
              <div class="row">
                <% @managers.each do |user| %>
                <div class="card mx-auto mt-2" style="min-width: 20rem;">
                  <div class="card-body">
                    <%= link_to team_user_path(@team, user) do %>
                    <div class="row no-deco">
                      <div class="col-8">
                        <h5 class="card-title font-weight-bold text-dark"><%= user.first_name + " " + user.last_name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= user.title %></h6>
                        <small class="card-text text-dark"><%= user.started_at.strftime("%b %Y") %></small>
                      </div>
                      <div class="col-4">
                        <%= image_tag("avatar", class: "img-fluid rounded-circle", style: "max-height: 100px; width: auto;") %>
                      </div>
                    </div>
                    <% end %>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="card border-dark mb-3 mx-auto">
          <div class="card-header text-center">
            <h2>Team Members</h2>
          </div>
          <div class="card-body">
            <div class="container-fluid">
              <div class="row">
                <% @users.each do |user| %>
                <% unless user.manager_id.nil? %>
                <% @user_manager = User.find(user.manager_id) %>
                <% end %>
                <div class="card mx-auto mt-2" style="min-width: 20rem;">
                  <div class="card-body">
                    <%= link_to team_user_path(@team, user) do %>
                    <div class="row no-deco">
                      <div class="col-8">
                        <h5 class="card-title font-weight-bold text-dark"><%= user.first_name + " " + user.last_name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= user.title %></h6>
                        <% unless user.manager_id.nil? %>
                        <small class="card-text text-dark">Reports To: <%= @user_manager.last_name + ", " + @user_manager.first_name %></small>
                        <% end %>
                      </div>
                      <div class="col-4">
                        <%= image_tag("avatar", class: "img-fluid rounded-circle", style: "max-height: 100px; width: auto;") %>
                      </div>
                    </div>
                    <% end %>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
