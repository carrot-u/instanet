<br>
<div class="container-fluid">
  <div class="card border-dark mb-3">
    <div class="card-header text-center">
      <div class="row">
        <div class="col-2">
          <%= link_to 'Back', team_user_path(@team, @user), class: "float-left btn btn-outline-secondary" %>
        </div>
        <div class="col-8 d-flex align-items-center justify-content-center">
          <h3><%= @user.full_name %> Badges</h3>
        </div>
        <div class="col-2">
          <%= link_to 'New Badge', new_team_user_user_badge_path, class: "float-right btn btn-outline-primary" %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <% @user_badges.each do |user_badge| %>
      <div class="card mx-auto mt-2">
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <% if user_badge.badge == 1 %>
                <%= image_tag("img_solveforthecustomer", class: "float-left img-fluid rounded-circle mr-3", style: "max-height: 100px; width: auto;") %>
              <% elsif user_badge.badge == 2 %>
                <%= image_tag("img-this-is-your-baby", class: "float-left img-fluid rounded-circle mr-3", style: "max-height: 100px; width: auto;") %>
              <% elsif user_badge.badge == 3 %>
                <%= image_tag("img_everyminutecounts", class: " float-left img-fluid rounded-circle mr-3", style: "max-height: 100px; width: auto;") %>
              <% elsif user_badge.badge == 4 %>
                <%= image_tag("img-of-course-but-maybe", class: "float-left img-fluid rounded-circle mr-3", style: "max-height: 100px; width: auto;") %>
              <% elsif user_badge.badge == 5 %>
                <%= image_tag("img_gofartogether", class: "float-left img-fluid rounded-circle mr-3", style: "max-height: 100px; width: auto;") %>
              <% else "ERROR" end %>
            </div>
            <div class="col-10">
              <div class="d-flex align-items-center justify-content-center">
                <i class="mr-3">"<%= user_badge.description %>"</i>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-2">
                <small> Awarded: <%= user_badge.created_at.strftime("%b, %Y") %></small></span>
            </div>
            <div class="col-10">
              <%= link_to 'Remove', team_user_user_badge_deactivate_path(@team, @user, user_badge), class: "float-right btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
